<p style="color: green"><%= notice %></p>

<h1>Posts</h1>
<% if user_signed_in?%>
  <%= link_to "Sign out",destroy_user_session_path ,data:{"turbo-method": :delete} %>
  <%= link_to "New post", new_post_path %>
<% else %>
 <%= link_to "Sign in",new_user_session_path  %>
 <% end %>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>


